# Social Media Polygraph - Environment Configuration
# Copy this file to .env and configure with your actual values
# NEVER commit .env to version control!

# ============================================================================
# Database Configuration
# ============================================================================

# ArangoDB
ARANGO_PASSWORD=changeme-use-strong-password
ARANGO_DATABASE=polygraph

# XTDB
XTDB_NODE_URL=http://xtdb:3000

# Dragonfly (Redis-compatible)
DRAGONFLY_URL=redis://dragonfly:6379

# ============================================================================
# Elixir CRDT Cluster
# ============================================================================

# Erlang distribution cookie (must be same across all nodes)
ERLANG_COOKIE=change-this-to-random-secret-string

# CRDT sync interval in milliseconds
CRDT_SYNC_INTERVAL=5000

# ============================================================================
# Security & Authentication
# ============================================================================

# JWT secret for authentication (use openssl rand -base64 32)
JWT_SECRET=change-this-jwt-secret-in-production-use-random-string

# Session secret (use openssl rand -base64 32)
SESSION_SECRET=change-this-session-secret-in-production

# ============================================================================
# Fact-Checking APIs
# ============================================================================

# Google Fact Check Tools API
# Get your API key from: https://console.cloud.google.com/
GOOGLE_FACT_CHECK_API_KEY=your-google-fact-check-api-key-here

# NewsAPI for source verification
# Get your API key from: https://newsapi.org/
NEWS_API_KEY=your-newsapi-key-here

# ClaimBuster API (optional)
# Get your API key from: https://idir.uta.edu/claimbuster/
CLAIM_BUSTER_API_KEY=your-claimbuster-api-key-here

# ============================================================================
# Application Settings
# ============================================================================

# Rust log level (trace, debug, info, warn, error)
RUST_LOG=info

# Enable WASM scoring in browser
ENABLE_WASM_SCORING=true

# GraphQL playground (disable in production)
GRAPHQL_PLAYGROUND=false

# ============================================================================
# Social Media Platform APIs (Optional)
# ============================================================================

# Twitter/X API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Facebook Graph API
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=social-media-polygraph/1.0

# ============================================================================
# Email Configuration (for notifications)
# ============================================================================

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@polygraph.example.com

# ============================================================================
# Monitoring & Observability
# ============================================================================

# Sentry DSN (error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ============================================================================
# Rate Limiting
# ============================================================================

# API rate limits (requests per second)
RATE_LIMIT_API=10
RATE_LIMIT_GRAPHQL=30
RATE_LIMIT_BURST=50

# ============================================================================
# SSL/TLS Configuration
# ============================================================================

# Domain name for SSL certificate
DOMAIN_NAME=polygraph.example.com

# Let's Encrypt email for certificate notifications
LETSENCRYPT_EMAIL=admin@example.com

# ============================================================================
# Development Settings (DO NOT USE IN PRODUCTION)
# ============================================================================

# Enable development mode
DEV_MODE=false

# CORS origins (comma-separated, or * for development)
CORS_ORIGINS=https://polygraph.example.com

# GraphQL introspection (disable in production)
GRAPHQL_INTROSPECTION=false

# ============================================================================
# Backup Configuration
# ============================================================================

# S3-compatible backup storage
BACKUP_S3_ENDPOINT=https://s3.amazonaws.com
BACKUP_S3_BUCKET=polygraph-backups
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# Backup schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup retention (days)
BACKUP_RETENTION_DAYS=30
