{
  "manifest_version": 3,
  "name": "Social Media Polygraph",
  "version": "0.1.0",
  "description": "Verify social media claims with AI-powered fact-checking",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://*.twitter.com/*",
    "https://*.x.com/*",
    "https://*.facebook.com/*",
    "https://*.instagram.com/*"
  ],
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "public/icon16.png",
      "48": "public/icon48.png",
      "128": "public/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*",
        "https://*.x.com/*",
        "https://*.facebook.com/*",
        "https://*.instagram.com/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/content.css"]
    }
  ],
  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  },
  "options_page": "public/options.html"
}
