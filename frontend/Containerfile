# Multi-stage build for ReScript + Deno frontend

FROM denoland/deno:1.40.0 as builder

WORKDIR /app

# Copy package files
COPY package.json bsconfig.json deno.json ./

# Install Node dependencies for ReScript
COPY --from=node:20-slim /usr/local/bin/node /usr/local/bin/node
COPY --from=node:20-slim /usr/local/bin/npm /usr/local/bin/npm

RUN npm install

# Copy source code
COPY src ./src
COPY public ./public
COPY index.html ./

# Build ReScript
RUN npm run res:build

# Build for production with Deno
RUN deno task build

# Production stage with nginx
FROM nginx:alpine

# Copy built files
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --quiet --tries=1 --spider http://localhost/ || exit 1

CMD ["nginx", "-g", "daemon off;"]
